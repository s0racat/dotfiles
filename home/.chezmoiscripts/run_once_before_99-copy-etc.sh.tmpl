#!/bin/sh
doas cp -r '{{ joinPath .chezmoi.sourceDir "../etc" }}' /
    echo -e "tmpfs\t/home/$USER/.cache\ttmpfs\tnoatime,nodev,nosuid,size=2G\t0\t0\ntmpfs\t/tmp\ttmpfs\trw,nodev,nosuid\t0\t0" | doas tee -a /etc/fstab 
